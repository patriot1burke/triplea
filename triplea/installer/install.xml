<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">
    <info>
        <appname>TripleA</appname>
        <appversion>--TRIPLEA_VERSION--</appversion>
        <authors>
            <author name="Sean Bridges" email="noone@nowhere.com"/>
        </authors>
        <url>http://triplea.sourceforge.net/</url>
    </info>
    
    <guiprefs width="640" height="480" resizable="no"/>

    <native type="izpack" name="ShellLink.dll"/>
    
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="deu"/>
        <langpack iso3="fra"/>
        <langpack iso3="ita"/>
    </locale>
    
    <resources>
        <res id="shortcutSpec.xml" src="default_shortcut_specification.xml"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
            <file src="triplea" targetdir="$INSTALL_PATH"/>
            <file src="script.bat" targetdir="$INSTALL_PATH"/>
            <!-- <file src="tsvg.reg" targetdir="$INSTALL_PATH"/> -->
            <parsable targetfile="$INSTALL_PATH/script.bat"/> <!-- The file will be parsed -->
        </pack>
    </packs>
    
</installation>
